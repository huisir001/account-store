{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "jsx": "preserve",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "removeComments": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": false,
      "baseUrl": ".",
      "paths": {
        "*": ["../node_modules/*"]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost",
        "ES6"
      ]
    },
    "include": [
      "./",
      "../app.ts",
      "../lib.d.ts"
    ],
    "exclude": [
      "../node_modules"
    ]
  }
  