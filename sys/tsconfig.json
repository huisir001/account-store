{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": false,
      "baseUrl": ".",
      "paths": {
        "*": ["../node_modules/*"]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost",
        "ES6"
      ]
    },
    "include": [
      "./"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  